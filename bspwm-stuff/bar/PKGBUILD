# Maintainer: Alexandru Ianu <alexandru@manjaro.org>
pkgname=bar-aint-recursive
pkgdesc='A lightweight xcb based bar'
pkgver=20141008
pkgrel=1
license='MIT/X11'
url='https://github.com/LemonBoy/bar'
source=("bar-git::git+${url}.git")
sha512sums=('SKIP')
arch=('x86_64' 'i686')
depends=('libxcb')
makedepends=('perl')
options=('strip' 'zipman')
provides=('bar')
conflicts=('bar')

pkgver () {
	cd "${pkgname}"
	git describe --long --tags | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

build () {
	cd "${pkgname}"
	make
	make doc
}

package () {
	cd "${pkgname}"
	install -Dm755 bar "${pkgdir}/usr/bin/bar"
	install -Dm644 bar.1 "${pkgdir}/usr/share/man/man1/bar.1"
}
